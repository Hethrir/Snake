target = 'snake'
cc = 'g++'
ccflags = '-Wall -std=c++11'

srcs = [
	'src/main.cpp',
	'src/snake.cpp',
	'src/tile.cpp',
	'src/food.cpp',
	'src/map.cpp',
	'src/spriteSheet.cpp',
	'src/world.cpp',
]

libs = [
	'sfml-system',
	'sfml-graphics',
	'sfml-window',
]

Program(target, srcs, LIBS = libs, CXX=cc, CCFLAGS=ccflags)
